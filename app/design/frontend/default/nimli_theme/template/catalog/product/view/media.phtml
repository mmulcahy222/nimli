 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>
<?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>
<p class="product-image product-image-zoom">
    <?php
        $_img = '<img id="image" src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(185,225).'" alt="'.$this->htmlEscape($this->getImageLabel()).'" onclick="show_magento_product_overlay(\'' . $this->helper('catalog/image')->init($_product, 'image')->resize(450) . '\'); return false;" title="'.$this->htmlEscape($this->getImageLabel()).'" />';
        echo $_helper->productAttribute($_product, $_img, 'image');
    ?>
</p>

</script>
<?php else: ?>
<p class="product-image">
    <?php
        $_img = '<img src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(185,225).'" alt="'.$this->htmlEscape($this->getImageLabel()).'"  onclick="show_magento_product_overlay(\'' . $this->helper('catalog/image')->init($_product, 'image')->resize(450) . '\'); return false;" title="'.$this->htmlEscape($this->getImageLabel()).'" />';
        echo $_helper->productAttribute($_product, $_img, 'image');
    ?>
</p>
<?php endif; ?>
<?php if (count($this->getGalleryImages()) > 0): ?>
<div class="more-views">
    <h2><?php echo $this->__('More Views') ?></h2>
    <ul>
    <?php foreach ($this->getGalleryImages() as $_image): ?>
        <li>
            <a href="#" onclick="show_magento_product_overlay('<?php echo $this->helper('catalog/image')->init($_product, 'image')->resize(450) ?>'); return false;" title="<?php echo $this->htmlEscape($_image->getLabel()) ?>"><img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(56); ?>" width="56" height="56" alt="<?php echo $this->htmlEscape($_image->getLabel()) ?>" /></a>
        </li>
    <?php endforeach; ?>
    </ul>
</div>
<?php endif; ?>


<div id="magento_product_overlay">
    <img src="http://betanews.com/wp-content/uploads/2012/08/fake1.jpg" id="magento_product_overlay_image">
    <img src="<?php echo $this->getSkinUrl('images/purple_close_box.png'); ?>" id="magento_product_close_overlay_button"></img>
</div>